<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/l_2_fgm"
    android:paddingLeft="@dimen/paddingleftright"
    android:paddingRight="@dimen/paddingleftright"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center_horizontal"
        android:padding="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="@string/_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/child_view_2nd_fgm"/>

    <TextView
        android:text="@string/fg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         >
        <!-- 默认选择 ：是-->
        <RadioButton
            android:id="@+id/yes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是" />

        <RadioButton
            android:checked="true"

            android:id="@+id/no1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否" />
    </RadioGroup>


    <TextView
        android:layout_marginTop="45dp"
        android:text="@string/fg2_lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <!-- 默认选择 ：是-->
        <RadioButton
            android:id="@+id/yes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是" />

        <RadioButton
            android:checked="true"

            android:id="@+id/no2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否" />
    </RadioGroup>




    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/next_second_fgm"
            android:text="下一步"
            android:textSize="19sp"
            android:textColor="#ffff"
            android:background="@drawable/button"
            android:layout_width="331dp"
            android:layout_height="46dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>